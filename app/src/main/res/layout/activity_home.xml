<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cseunited.alumni.cseunited.Home">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="800dp"
        android:layout_height="@dimen/app_bar_height"
        android:background="?attr/colorPrimary"
        android:minHeight="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="13dp"
        android:text="HOME"
        android:textColor="@color/colorTextIcons"
        android:textSize="@dimen/text_Title"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:textAlignment="center"
        android:textColor="@color/colorTextIcons"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="60dp" />

    <ImageView
        android:id="@+id/usrimg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@+id/usr"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cse" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="111dp"
        android:text="UPCOMING EVENT"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_header"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="67dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.274"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/event"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_large"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintRight_toLeftOf="@+id/textView9"
        android:layout_marginRight="83dp" />


</android.support.constraint.ConstraintLayout>
